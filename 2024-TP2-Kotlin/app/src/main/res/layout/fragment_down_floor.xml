<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity=""
            android:layout_marginBottom="16dp">

            <!-- Garage -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconGarage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_garage"
                    android:contentDescription="Garage" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garage"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Entry -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconEntry"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_entry"
                    android:contentDescription="Entry" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Living Room -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconLivingRoom"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_living_room"
                    android:contentDescription="Living Room" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Living Room"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity=""
            android:layout_marginBottom="16dp">

            <!-- Kitchen -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconKitchen"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_kitchen"
                    android:contentDescription="Kitchen" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kitchen"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Dining Room -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconDiningRoom"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_dining"
                    android:contentDescription="Dining Room" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dining Room"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Laundry -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconLaundry"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_laundry"
                    android:contentDescription="Laundry" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laundry"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="">

            <!-- Playroom -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconPlayroom"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_game"
                    android:contentDescription="Playroom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playroom"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Bathroom -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iconBathroom"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_bathroom"
                    android:contentDescription="Bathroom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bathroom"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
